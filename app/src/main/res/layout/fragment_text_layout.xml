<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <com.flyco.tablayout.SlidingTabLayout2
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tabIndicatorFullWidth="false"
            android:layout_centerVertical="true"
            tl:tl_indicator_color="#26D25E"
            tl:tl_indicator_width="30dp"
            tl:tl_tab_padding="10dp"
            tl:tl_selectTextSize="16sp"
            tl:tl_textsize="16sp"
            tl:tl_underline_color="@color/transparent"
            tl:tl_tab_space_equal="false"
            tl:tl_textBold="SELECT"
            tl:tl_underline_height="0dp"
            tl:tl_textSelectColor="@color/text_color"
            tl:tl_textUnselectColor="@color/text_dark"   />




    <com.demo.viewpgae2demos.ui.view.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_below="@+id/tab"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
      />
    </com.demo.viewpgae2demos.ui.view.NestedScrollableHost>

</LinearLayout>
